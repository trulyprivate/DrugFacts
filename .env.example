# OpenPipe AI Configuration
OPENPIPE_API_KEY=your_openpipe_api_key_here
OPENPIPE_BASE_URL=https://api.openpipe.ai/api/v1
AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.1

# AI Service Configuration
ENABLE_AI_CLASSIFICATION=true
AI_CLASSIFICATION_CACHE_TTL=86400  # 24 hours in seconds
AI_REQUEST_TIMEOUT=30              # 30 seconds
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1.0                 # seconds

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=drug_facts
MONGODB_COLLECTION_NAME=drugs
MONGODB_CACHE_COLLECTION_NAME=ai_classification_cache

# Logging Configuration
AI_LOG_LEVEL=INFO

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here